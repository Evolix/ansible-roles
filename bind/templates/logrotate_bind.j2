{% if bind_chroot_set | bool %}
{{ bind_chroot_path }}{{ bind_log_file }} {
{% else %}
{{ bind_log_file }} {
{% endif %}
    weekly
    missingok
    rotate 52
    create 640 bind bind
    sharedscripts
    postrotate
        rndc reload > /dev/null
    endscript
}

{% if bind_chroot_set | bool %}
{{ bind_chroot_path }}{{ bind_statistics_file }} {
{% else %}
{{ bind_log_file }} {
{% endif %}
    rotate 7
    daily
    missingok
    notifempty
    delaycompress
    compress
    su bind bind
}
