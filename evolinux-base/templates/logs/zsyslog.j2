# Custom EvoLinux
create 640 root adm
{% if not evolinux_logs_default_dateext %}
# BEGIN legacy setting
# â€¦ when global dateext and dateformat are not enabled
dateext
dateyesterday
dateformat .%Y%m%d
# END legacy setting
{% endif %}
missingok
notifempty
delaycompress
compress
postrotate
{% if ansible_distribution_major_version is version('10', '>=') %}
    /usr/lib/rsyslog/rsyslog-rotate
{% else %}
    invoke-rc.d rsyslog rotate > /dev/null
{% endif %}
endscript

/var/log/daemon.log
/var/log/kern.log
/var/log/lpr.log
{
    weekly
    rotate 5
}

/var/log/auth.log
/var/log/user.log
/var/log/cron.log
/var/log/debug
/var/log/messages
/var/log/syslog
/var/log/mail.info
/var/log/mail.warn
/var/log/mail.err
/var/log/mail.log
{
    daily
    rotate 365
}
